<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todaysshow">

    <application
        android:name=".TodayShowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CategoryActivity"
            android:theme="@style/Transparent"
            ></activity>
        <activity android:name=".fragment.ProfileFragment" />
        <activity android:name=".fragment.CommunityFragment"/>
        <activity android:name=".fragment.SearchFragment" />
        <activity android:name=".fragment.HomeFragment" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ShowDetailActivity" />
    </application>

</manifest>