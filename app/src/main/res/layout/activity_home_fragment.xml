<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="#000000"
    >


    <ScrollView
        android:id="@+id/home_fragment_main_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1625px">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/home_main_ad_vp"
                    android:layout_width="match_parent"
                    android:layout_height="1625px">
                </androidx.viewpager.widget.ViewPager>
                <com.example.todaysshow.CircleIndicator
                    android:paddingBottom="100px"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/home_main_ad_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.example.todaysshow.CircleIndicator>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400px">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="90px"
                    android:id="@+id/home_journal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px">
                <TextView
                    android:paddingLeft="110px"
                    android:textColor="#ffffff"
                    android:text="제우님 맞춤공연"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="440px">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="100px"
                    android:id="@+id/personalizedShowRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px">
                <TextView
                    android:paddingLeft="110px"
                    android:textColor="#ffffff"
                    android:text="에디터's Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="440px">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="100px"
                    android:id="@+id/recommendShowRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"></LinearLayout>

        </LinearLayout>



    </ScrollView>
    <LinearLayout
        android:background="#cc000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="322px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/home_fragment_category_bt"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="110px"
                    android:background="@drawable/top_menu_bar_image"
                    android:layout_width="80px"
                    android:layout_height="90px">
                </Button>
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:text="오늘의 공연"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>