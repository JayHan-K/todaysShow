<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="40px"
    android:layout_width="1220px"
    android:layout_height="390px"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/community_hot_issue_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <com.makeramen.roundedimageview.RoundedImageView
          android:scaleType="centerCrop"
          app:riv_oval="false"
          app:riv_corner_radius="10dp"
          android:src="@drawable/journal_image_sample2"
          android:id="@+id/community_hot_issue_cv_iv"
          android:layout_marginLeft="60px"
          android:layout_marginTop="45px"
          android:layout_width="340px"
          android:layout_height="300px"></com.makeramen.roundedimageview.RoundedImageView>

        <TextView
            android:id="@+id/community_hot_issue_cv_index_tv"
            android:layout_marginLeft="447px"
            android:layout_marginTop="50px"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/community_hot_issue_cv_title_tv"
            android:layout_marginLeft="447px"
            android:layout_marginTop="130px"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="명동에 극장이 있다고!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>