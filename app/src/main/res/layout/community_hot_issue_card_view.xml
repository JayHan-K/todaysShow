<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/community_hot_issue_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <com.makeramen.roundedimageview.RoundedImageView
          android:scaleType="centerCrop"
          app:riv_oval="false"
          app:riv_corner_radius="10dp"
          android:src="@drawable/journal_image_sample2"
          android:id="@+id/community_hot_issue_cv_iv"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="15dp"
          android:layout_width="113dp"
          android:layout_height="97dp"></com.makeramen.roundedimageview.RoundedImageView>

        <TextView
            android:textColor="#777777"
            android:fontFamily="@font/kopubworlddotumbold"
            android:id="@+id/community_hot_issue_cv_index_tv"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="24dp"
            android:textSize="12dp"
            android:text="01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#000000"
            android:fontFamily="@font/kopubworlddotumbold"
            android:id="@+id/community_hot_issue_cv_title_tv"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="47dp"
            android:textSize="14dp"
            android:text="명동에 극장이 있다고!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>