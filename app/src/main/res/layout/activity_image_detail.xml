<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ImageDetailActivity">

    <TextView
        android:fontFamily="@font/kopubworlddotumbold"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_detail_title"
        android:text="오페라의 유령"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/image_detail_image_num_tv"
        android:text="1 of 3"
        android:fontFamily="@font/kopubworlddotummedium"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/icon_close"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <Button
        android:id="@+id/image_detail_close_bt"
        android:background="#00000000"
        android:layout_marginRight="25dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/image_detail_vp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:src="@drawable/opera_2"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>
    
</RelativeLayout>