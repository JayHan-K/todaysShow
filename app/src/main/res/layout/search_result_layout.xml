<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="400px">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_result_journal_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px">
        <TextView
            android:textColor="#ffffff"
            android:layout_marginLeft="100px"
            android:text="정확순 및 인기"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1650px">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:paddingHorizontal="20sp"
            >
            <Button
                android:id="@+id/search_result_bt1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button1"></Button>
            <Button
                android:id="@+id/search_result_bt4"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>
            <Button
                android:id="@+id/search_result_bt7"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>

            <Button
                android:id="@+id/search_result_bt2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button1"></Button>
            <Button
                android:id="@+id/search_result_bt5"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>
            <Button
                android:id="@+id/search_result_bt8"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>
            <Button
                android:id="@+id/search_result_bt3"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button1"></Button>
            <Button
                android:id="@+id/search_result_bt6"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>
            <Button
                android:id="@+id/search_result_bt9"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="button2"></Button>


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px">
        <TextView
            android:layout_marginLeft="100px"
            android:textColor="#ffffff"
            android:text="다음과 관련된 공연도 살펴보세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="100px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:clipToPadding="false"
            android:id="@+id/search_result_relation_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>