<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_question_ll"
            android:background="#000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="84dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="27dp"
                        android:src="@drawable/icon_pre"
                        android:layout_centerVertical="true"
                        android:layout_width="9dp"
                        android:layout_height="14dp"/>
                    <Button
                        android:id="@+id/editor_challenges_close_bt"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:fontFamily="@font/kopubworlddotumbold"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                        android:text="질문하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <Button
                        android:fontFamily="@font/kopubworlddotummedium"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:text="등록"
                        android:id="@+id/apply_btn"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:background="#00000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"></LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.25"
                android:ems="5"
                android:fontFamily="@font/kopubworlddotummedium"
                android:hint="고민이 가장 잘 드러나는 한줄"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#9b9b9b"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.25"
                android:fontFamily="@font/kopubworlddotummedium"
                android:text="해시태그"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25"
                android:ems="5"
                android:fontFamily="@font/kopubworlddotummedium"
                android:hint="3가지 해시태그를 적어주세요"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#9b9b9b"
                android:textSize="13dp" />

            <Spinner
                android:layout_weight="0.25"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="30dp"
                android:spinnerMode="dropdown"
                android:id="@+id/spinner_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DEDEDE"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:fontFamily="@font/kopubworlddotummedium"
                android:gravity="start"
                android:hint="고민을 적어주세요!"
                android:inputType="textPersonName"
                android:textColor="#9b9b9b"
                android:textSize="13dp" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>