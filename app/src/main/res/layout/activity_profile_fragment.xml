<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="84dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="27dp"
                        android:src="@drawable/icon_setting"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:id="@+id/category_detail_fragment_close_bt"
                        android:layout_centerVertical="true"

                        android:background="#00000000"
                        android:layout_width="30dp"
                        android:layout_height="30dp">
                    </Button>
                    <TextView
                        android:fontFamily="@font/kopubworlddotumbold"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:text="오늘의 공연"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_user_iv"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/editor_profile_3"
                app:civ_border_width="0dp"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/profile_user_iv"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:fontFamily="@font/kopubworlddotumbold"
                        android:textColor="#ffffff"
                        android:text="재우"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_alarm"
                        android:layout_width="14dp"
                        android:layout_height="16dp"/>
                </LinearLayout>

                <TextView
                    android:textSize="13dp"
                    android:fontFamily="@font/kopubworlddotummedium"
                    android:textColor="#9e9c9d"
                    android:text="프로필수정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        
        <RelativeLayout
            android:background="#ededed"
            android:layout_width="match_parent"
            android:layout_height="330dp">

            <RelativeLayout
                android:id="@+id/profile_attend_rl"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="85dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_point_iv"
                    android:src="@drawable/icon_point"
                    android:layout_width="60dp"
                    android:layout_height="60dp"></ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#616161"
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="15dp"
                    android:layout_below="@+id/profile_point_iv"
                    android:text="포인트적립"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_toLeftOf="@+id/profile_attend_rl"
                android:layout_marginTop="35dp"
                android:layout_marginRight="60dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="85dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_attend_iv"
                    android:src="@drawable/icon_attend"
                    android:layout_width="60dp"
                    android:layout_height="60dp"></ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#616161"
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="15dp"
                    android:layout_below="@+id/profile_attend_iv"
                    android:text="출석현황"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_toRightOf="@+id/profile_attend_rl"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="60dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="85dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_shop_iv"
                    android:src="@drawable/icon_today_shop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"></ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="#616161"
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="15dp"
                    android:layout_below="@+id/profile_shop_iv"
                    android:text="오늘의 SHOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/profile_scrap_rl"
                android:layout_marginTop="140dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_unstroke_rounded_corner"
                android:layout_width="110dp"
                android:layout_height="150dp">
                <TextView
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="30dp"
                    android:textColor="#f9d100"
                    android:text="3"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:fontFamily="@font/kopubworlddotummedium"
                    android:textColor="#303030"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="스크랩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_my_review_rl"
                android:layout_toLeftOf="@+id/profile_scrap_rl"
                android:layout_marginTop="140dp"
                android:layout_marginRight="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_unstroke_rounded_corner"
                android:layout_width="110dp"
                android:layout_height="150dp">
                <TextView
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="30dp"
                    android:textColor="#f9d100"
                    android:text="2"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:fontFamily="@font/kopubworlddotummedium"
                    android:textColor="#303030"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="내 리뷰"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_qna_rl"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/profile_scrap_rl"
                android:layout_marginTop="140dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_unstroke_rounded_corner"
                android:layout_width="110dp"
                android:layout_height="150dp">
                <TextView
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:textSize="30dp"
                    android:textColor="#f9d100"
                    android:text="2"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:fontFamily="@font/kopubworlddotummedium"
                    android:textColor="#303030"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Q&amp;A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/kopubworlddotummedium"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="찜한 작품"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_my_show_rv"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

        </RelativeLayout>



    </LinearLayout>

</FrameLayout>