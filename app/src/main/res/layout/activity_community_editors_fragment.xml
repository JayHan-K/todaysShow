<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_width="match_parent"
                    android:layout_height="26dp">
                    <RelativeLayout
                        android:background="@drawable/notice_rounded_corner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_notice"
                            android:layout_width="17dp"
                            android:layout_height="12dp"/>
                        <TextView
                            android:layout_marginLeft="57dp"
                            android:fontFamily="@font/kopubworlddotummedium"
                            android:textSize="10dp"
                            android:layout_centerVertical="true"
                            android:textColor="#2d2d2d"
                            android:text="2020 공연 문화 에티켓지키기"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/community_notice_more_bt"
                            android:fontFamily="@font/kopubworlddotumbold"
                            android:textSize="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#2d2d2d"
                            android:text="...더보기"
                            android:background="#00000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/community_editors_journal_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/community_editors_editor_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        <Button
            android:background="@drawable/icon_writing_editor"
            android:layout_margin="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="62dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true">

        </Button>

    </RelativeLayout>





</FrameLayout>

