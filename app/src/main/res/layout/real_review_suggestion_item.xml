<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="145dp">
        <LinearLayout
            android:layout_width="29dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:src="@drawable/poster_sample11"
            android:layout_width="120dp"
            android:layout_height="match_parent">
        </ImageView>
        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/kopubworlddotumbold"
                android:id="@+id/writing_review_title_tv"
                android:paddingBottom="3dp"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:text="뮤지컬 오페라의 유령"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/writing_review_tag_tv"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:text="로맨스, 스릴러"
                android:layout_below="@+id/writing_review_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>